<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@color/login_bar">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Change Password"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:id="@+id/Imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/x_et_bg"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".15"
                        android:src="@drawable/password_icon"
                        android:padding="5dp"
                        />

                    <EditText
                        android:id="@+id/edt_user_oldpassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:hint="Enter Your Old Password"
                        android:background="@drawable/x_et_reg_log_bg"
                        android:maxLength="50"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edt_user_oldpassworderr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:hint="This Field Is Required"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="10dp"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@drawable/x_et_bg"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".15"
                        android:src="@drawable/password_icon"
                        android:padding="5dp"
                        />

                    <EditText
                        android:id="@+id/edt_user_newpassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:hint="Enter Your New Password"
                        android:background="@drawable/x_et_reg_log_bg"
                        android:maxLength="50"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edt_user_newpassworderr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:hint="This Field Is required"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="10dp"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    android:weightSum="1"
                    android:background="@drawable/x_et_bg"
                    >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".15"
                        android:src="@drawable/password_icon"
                        android:padding="5dp"
                        />

                    <EditText
                        android:id="@+id/edt_user_confrmpassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".8"
                        android:hint="Enter Your Confirm Password"
                        android:background="@drawable/x_et_reg_log_bg"
                        android:maxLength="50"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edt_user_confrmpassworderr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:hint="Enter the Password"
                        android:visibility="gone"
                        android:padding="2dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="10dp"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/red" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/newpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:hint="Enter the Password"
                    android:visibility="gone"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="10dp"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/red" />

            </LinearLayout>
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="70dp"
                 android:layout_marginBottom="10dp"
                 android:layout_marginTop="5dp"
                 android:orientation="horizontal">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical">

                     <EditText
                         android:id="@+id/signInPassword"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:hint="Password"
                         android:background="@drawable/x_et_bg"
                         android:padding="10dp"
                         android:maxLength="50"
                         android:singleLine="true"
                         android:textColor="@color/black" />

                     <TextView
                         android:id="@+id/signInPassworderr"
                         android:layout_width="match_parent"
                         android:layout_height="50dp"
                         android:background="@color/transparent"
                         android:hint="mobile"
                         android:layout_marginRight="0dp"
                         android:layout_marginLeft="10dp"
                         android:maxLength="50"
                         android:visibility="gone"
                         android:singleLine="true"
                         android:textColor="@color/red" />

                 </LinearLayout>
             </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:background="#d94040"
                    android:text="change password"
                    android:textColor="@color/white"
                     />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
